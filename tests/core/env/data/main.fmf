/test:
    test: echo ">>>${STR}${INT}<<<"
    path: /

    /yes:
        summary: This is a test with variables
        environment:
            STR: L
            INT: 1
    /no:
        summary: This is a test without variables
/plan:
    discover:
        how: fmf
    provision:
        how: local
    execute:
        how: tmt

    /yes:
        summary: This is a plan with variables
        environment:
            STR: L
            INT: 2
        prepare:
            script:
              - declare -p STR
              - declare -p INT
    /no:
        summary: This is a plan without variables
